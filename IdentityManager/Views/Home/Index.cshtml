@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    @if (User.Identity.IsAuthenticated)
    {
        var twofactor = ViewData["TwoFactorEanbled"];
        if (twofactor != null && twofactor.ToString().ToLower() == "true")
        {
            <a asp-action="EnableAuthenticated" asp-controller="Account" class=" btn-warning"> Reset &Aacute; Remove Two Factor Auth</a>

        }
        else
        {
            <a asp-action="EnableAuthenticated" asp-controller="Account"> Setup Two Factor Auth</a>
        }

        <br /><br />

        @if (User.IsInRole("Admin"))
        {
            <h2> Your role is - Admin</h2>
        }
        else
        {
            <h2> Your role is - User</h2>
        }



    }

    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
